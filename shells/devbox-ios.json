{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": {
    "cocoapods": {
      "version": "latest",
      "platforms": ["x86_64-darwin", "aarch64-darwin"]
    },
    "yarn-berry": "latest",
    "jq": "latest"
  },
  "shell": {
    "init_hook": [
      ". $DEVBOX_PROJECT_ROOT/../scripts/shared/common.sh",
      "if [ \"$(uname -s)\" = \"Darwin\" ]; then . $SCRIPTS_DIR/ios/env.sh; fi",
      ". $SCRIPTS_DIR/shared/sdk-summary.sh"
    ],
    "scripts": {
      "setup-ios": ["bash $SCRIPTS_DIR/ios/setup.sh"],
      "test-ios": ["bash $SCRIPTS_DIR/ios/test.sh"]
    }
  }
}
