{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": {
    "yarn-berry": "latest",
    "jq": "latest",
    "treefmt": "latest",
    "nixfmt": "latest",
    "shfmt": "latest"
  },
  "shell": {
    "init_hook": [
      ". $DEVBOX_PROJECT_ROOT/../scripts/shared/common.sh"
    ],
    "scripts": {
      "build": ["bash $SCRIPTS_DIR/build.sh"],
      "format": ["treefmt"],
      "lint": ["treefmt --fail-on-change"]
    }
  }
}
