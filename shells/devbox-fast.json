{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": {
    "yarn-berry": "latest",
    "jq": "latest",
    "treefmt": "latest",
    "nixfmt": "latest",
    "shfmt": "latest"
  },
  "shell": {
    "scripts": {
      "build": [
        "yarn install --immutable",
        "yarn build",
        "yarn lint",
        "yarn test --coverage"
      ]
    }
  }
}
