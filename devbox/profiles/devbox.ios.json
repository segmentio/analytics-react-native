{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": {
    "cocoapods": {
      "version":   "latest",
      "platforms": ["x86_64-darwin", "aarch64-darwin"],
    },
    "yarn-berry": "latest",
    "jdk17":      "latest",
    "gradle":     "latest",
    "jq":         "latest"
  },
  "shell": {
    "init_hook": [
      ". \"${DEVBOX_PROJECT_ROOT:-$PWD}/devbox/scripts/init.sh\""
    ],
    "scripts": {
      "clean": ["bash $DEVBOX_PROJECT_ROOT/devbox/scripts/clean.sh"],
      "build": ["bash $DEVBOX_PROJECT_ROOT/devbox/scripts/build.sh"],
      "test-ios": ["bash $DEVBOX_PROJECT_ROOT/devbox/scripts/ios/test.sh"],
      "act-ci": [
        "bash $DEVBOX_PROJECT_ROOT/scripts/act-ci.sh --platform ubuntu-latest=node:20-bullseye"
      ],
      "setup-ios": [
        "bash $DEVBOX_PROJECT_ROOT/scripts/ios-setup.sh",
      ],
      "start-ios": [
        "bash $DEVBOX_PROJECT_ROOT/scripts/ios-manager.sh start",
      ],
      "release": ["bash $DEVBOX_PROJECT_ROOT/devbox/scripts/release.sh"],
      "reset-ios": ["bash $DEVBOX_PROJECT_ROOT/devbox/scripts/ios/reset.sh"],
      "stop-ios": ["bash $DEVBOX_PROJECT_ROOT/devbox/scripts/ios/stop.sh"],
    },
  },
}
