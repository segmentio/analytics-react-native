{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "paths": {
      "react-native": ["./src/stubs/react-native"],
      "@segment/sovran-react-native": ["./src/stubs/sovran"],
      "react-native-get-random-values": [
        "./src/stubs/react-native-get-random-values"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
